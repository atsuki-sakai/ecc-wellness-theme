<div class="tw-bg-white tw-py-24 tw-sm:tw-py-32" style="background-image: url({{ section.settings.background_image | image_url: width: 1100 }}); background-size: cover; background-position: center; background-repeat: no-repeat;">
  <div class="tw-mx-auto tw-max-w-7xl tw-px-6 tw-lg:tw-px-8">
    <div class="">
      <p class="tw-text-2xl tw-font-semibold tw-leading-7 tw-text-indigo-600">{{ section.settings.sub_heading }}</p>
      <h2 class="tw-mt-2 tw-text-5xl tw-font-semibold tw-tracking-tight tw-text-gray-900 tw-my-6">{{ section.settings.heading }}</h2>
      <p class="tw-mt-12 tw-text-pretty tw-text-xl tw-font-medium tw-text-gray-500">{{ section.settings.description }}</p>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Header section",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background image"
      },
      {
        "type": "text",
        "id": "sub_heading",
        "label": "Sub heading",
        "default": "Contact us"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "お問い合わせについて"
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "Description",
        "default": "<p>Anim aute id magna aliqua ad ad non deserunt sunt. Qui irure qui lorem cupidatat commodo. Elit sunt amet fugiat veniam occaecat fugiat.</p>"
      }
    ],
    "presets": [
      {
        "name": "Header section"
      }
    ]
  }
{% endschema %}
