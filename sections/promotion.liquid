

{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
  {%- endstyle -%}
  
  {%- style -%}
  
    @media screen and (min-width: 750px) {}
  
  {%- endstyle -%}
  
<div class="isolate gradient">
    <div class="section-{{ section.id }}-padding scroll-trigger animate--slide-in">
        <div class="">
            <div class="tw-overflow-hidden tw-pt-48 sm:tw-pt-24 sm:tw-pb-64">
                <div class="">
                <div class="tw-mx-auto tw-max-w-[1100px] tw-px-4 sm:tw-px-6 lg:tw-px-8">
                    <div class="tw-relative tw-pb-16 tw-pt-48 sm:tw-pb-24">
                    <div>
                      <a href="{{ section.settings.link }}" class="tw-font-semibold tw-text-black tw-text-xl">
                        <h2 id="sale-heading" class="tw-text-3xl tw-font-bold tw-tracking-wide  tw-text-black md:tw-text-4xl xl:tw-text-5xl">
                        {{ section.settings.title }}
                        </h2>
                        <p class="tw-text-gray-700 tw-mt-2 tw-font-normal md:tw-text-xl xl:tw-text-2xl md:tw-mt-6">{{ section.settings.heading }}</p>
                        <div class="tw-mt-12 tw-space-y-6 md:tw-w-1/3">
                         {% for block in section.blocks %}
                          <h4 class="tw-bg-white tw-w-fit tw-text-green-700 tw-border tw-border-green-700 tw-text-xl  tw-px-4 tw-py-2 tw-rounded-full">
                            {{ block.settings.title }}
                          </h4>
                          <p class="tw-text-2xl tw-font-light tw-mb-4">{{ block.settings.description }}</p>
                         {% endfor %}
                        </div>
                        <div class="tw-mt-12 tw-font-light tw-text-2xl tw-text-white tw-bg-black hover:tw-bg-gray-800 tw-rounded-md tw-shadow-lg tw-px-14 tw-py-4 tw-inline-flex tw-items-center tw-gap-2">
                          {{ section.settings.btn_text }}
                            <span aria-hidden="true"> &rarr;</span>
                            </div>
                        </a>
                    </div>

                    <div class="tw-absolute -tw-top-32 tw-left-1/2 tw-min-w-max -tw-translate-x-1/2 tw-transform sm:tw-top-6 sm:tw-translate-x-0">
                        <div class="tw-ml-24 tw-flex tw-space-x-6 sm:tw-ml-3 lg:tw-space-x-8">
                        <div class="tw-flex tw-space-x-6 sm:tw-flex-col sm:tw-space-x-0 sm:tw-space-y-6 lg:tw-space-y-8">
                            <div class="tw-flex-shrink-0">
                            <img class="tw-h-64 tw-w-64 tw-rounded-lg tw-object-cover md:tw-h-72 md:tw-w-72" src="https://tailwindui.com/plus/img/ecommerce-images/home-page-03-category-01.jpg" alt="" width="256" height="256">
                            </div>

                            <div class="tw-mt-6 tw-flex-shrink-0 sm:tw-mt-0">
                            <img class="tw-h-64 tw-w-64 tw-rounded-lg tw-object-cover md:tw-h-72 md:tw-w-72" src="https://tailwindui.com/plus/img/ecommerce-images/home-page-03-category-02.jpg" alt="" width="256" height="256">
                            </div>
                        </div>
                        <div class="tw-flex tw-space-x-6 sm:-tw-mt-20 sm:tw-flex-col sm:tw-space-x-0 sm:tw-space-y-6 lg:tw-space-y-8">
                            <div class="tw-flex-shrink-0">
                            <img class="tw-h-64 tw-w-64 tw-rounded-lg tw-object-cover md:tw-h-72 md:tw-w-72" src="https://tailwindui.com/plus/img/ecommerce-images/home-page-03-favorite-01.jpg" alt="" width="256" height="256">
                            </div>

                            <div class="tw-mt-6 tw-flex-shrink-0 sm:tw-mt-0">
                            <img class="tw-h-64 tw-w-64 tw-rounded-lg tw-object-cover md:tw-h-72 md:tw-w-72" src="https://tailwindui.com/plus/img/ecommerce-images/home-page-03-favorite-02.jpg" alt="" width="256" height="256">
                            </div>
                        </div>
                        <div class="tw-flex tw-space-x-6 sm:tw-flex-col sm:tw-space-x-0 sm:tw-space-y-6 lg:tw-space-y-8">
                            <div class="tw-flex-shrink-0">
                            <img class="tw-h-64 tw-w-64 tw-rounded-lg tw-object-cover md:tw-h-72 md:tw-w-72" src="https://tailwindui.com/plus/img/ecommerce-images/home-page-03-category-01.jpg" alt="" width="256" height="256">
                            </div>

                            <div class="tw-mt-6 tw-flex-shrink-0 sm:tw-mt-0">
                            <img class="tw-h-64 tw-w-64 tw-rounded-lg tw-object-cover md:tw-h-72 md:tw-w-72" src="https://tailwindui.com/plus/img/ecommerce-images/home-page-03-category-02.jpg" alt="" width="256" height="256">
                            </div>
                        </div>
                        </div>
                    </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>
  
  
  {% schema %}
    {
      "name": "Promotion",
      "tag": "section",
      "settings": [
        {
          "type": "range",
          "id": "padding_top",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_top",
          "default": 36
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_bottom",
          "default": 36
        },
        {
          "type": "liquid",
          "id": "title",
          "label": "Title",
          "default": "Test Product"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Final Stock. Up to 50% off."
        },
        {
          "type": "text",
          "id": "btn_text",
          "label": "Button Text",
          "default": "Shop the sale"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ],
      "blocks": [
        {
          "type": "point",
          "name": "Point",
          "settings": [
            {
              "type": "text",
              "id": "title",
              "label": "Title",
              "default": "特別割引でいつでもお得"
            },
            {
              "type": "text",
              "id": "description",
              "label": "Description",
              "default": "通常価格よりも大幅割引で人気商品をお得に購入できる特典付き！「欲しい」を叶えるアンバサダー限定の割引価格で毎日のショッピングをもっと楽しくもっとお得に！"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "Promotion"
        }
      ]
    }
  {% endschema %}
