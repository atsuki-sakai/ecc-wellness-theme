<style>
  .title {

  }
  .campany-detail-container {
    width: 100%;
    max-width: 1200px;
    margin: auto;
    padding: 1rem 2rem;
    margin-bottom: 5rem;
    margin-top: 5rem;
  }
  .campany-item{
    display: flex;
    align-items: center;
    width: 100%;
    padding: 1rem;
    border-bottom: solid gray 1px;
  }
  .campany-item-left {
    width: 40%;
    font-size: 18px;
    letter-spacing: 2px;
  }
  .campany-item-right {
    width: 60%;
    font-size: 16px;
    letter-spacing: 1px;
  }

  @media screen and (min-widht: 1000px) {
    .campany-detail-container {

    }
    .campany-item{

    }
    .campany-item-left {

    }
    .campany-item-right {

    }
  }
</style>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="contact page-width page-width--narrow section-{{ section.id }}-padding">
    <div class="campany-detail-container va__fade-in">
      <h2 class="title">
        {{ section.settings.title | escape }}
      </h2>
      {% for block in section.blocks %}
        <div class="campany-item">
          <div class="campany-item-left">{{ block.settings.section_title | escape }}</div>
          <div class="campany-item-right">{{ block.settings.section_value | escape }}</div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "会社概要",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "会社概要",
      "label": "タイトル"
    },
    {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "info": "t:sections.all.colors.has_cards_info",
        "default": "scheme-1"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
  ],
  "blocks": [
    {
      "type": "section",
      "name": "項目",
      "settings": [
        {
          "type": "text",
          "id": "section_title",
          "default": "項目",
          "label": "項目"
        },
        {
          "type": "text",
          "id": "section_value",
          "default": "値",
          "label": "値"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "会社概要"
    }
  ]
}
{% endschema %}
