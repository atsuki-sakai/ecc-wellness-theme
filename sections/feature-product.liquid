

{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
  {%- endstyle -%}
  
  {%- style -%}
  
    @media screen and (min-width: 750px) {}
  
  {%- endstyle -%}
  
<div class="isolate gradient">
    <div class="section-{{ section.id }}-padding">
        <div class="tw-bg-white">
            <div class="tw-mx-auto tw-max-w-[1100px] tw-px-4 tw-py-24 sm:tw-px-6 sm:tw-py-32 lg:tw-px-8">
              <div class="tw-grid tw-grid-cols-1 tw-items-center tw-gap-x-8 tw-gap-y-16 lg:tw-grid-cols-2">
                <div>
                  <div class="tw-border-b tw-border-gray-200 tw-pb-10">
                    <h2 class="tw-font-medium tw-text-gray-500">{{ section.settings.title }}</h2>
                    <p class="tw-mt-2 tw-text-4xl tw-font-bold tw-tracking-tight tw-text-gray-900 sm:tw-text-5xl">{{ section.settings.heading }}</p>
                  </div>
                  <dl class="tw-mt-10 tw-space-y-10">
                    {% for block in section.blocks %}
                      <div>
                      <dt class="tw-text-3xl tw-font-medium tw-text-gray-900">{{ block.settings.title }}</dt>
                      <dd class="tw-mt-3 tw-text-xl tw-text-gray-500">{{ block.settings.description }}</dd>
                    </div>
                    {% endfor %}
                  </dl>
                  <div class="tw-flex tw-justify-end tw-items-centern tw-underline ">
                    <a href="{{ section.settings.link }}" class="tw-mt-12 tw-font-light tw-text-2xltw-inline-flex tw-items-center tw-gap-2">
                      {{ section.settings.btn_text }}
                      <span aria-hidden="true"> &rarr;</span>
                    </a>
                  </div>
                </div>
          
                <div>
                  <div class="tw-aspect-h-1 tw-aspect-w-1 tw-overflow-hidden tw-rounded-lg tw-bg-gray-100">
                    <img src="https://tailwindui.com/plus/img/ecommerce-images/product-feature-09-main-detail.jpg" alt="Black kettle with long pour spot and angled body on marble counter next to coffee mug and pour-over system." class="h-full w-full tw-object-cover tw-object-center" width="1100" height="1100">
                  </div>
                  <div class="tw-mt-4 tw-grid tw-grid-cols-2 tw-gap-4 sm:tw-mt-6 sm:tw-gap-6 lg:tw-mt-8 lg:tw-gap-8">
                    <div class="tw-aspect-h-1 tw-aspect-w-1 tw-overflow-hidden tw-rounded-lg tw-bg-gray-100">
                      <img src="https://tailwindui.com/plus/img/ecommerce-images/product-feature-09-detail-01.jpg" alt="Detail of temperature setting button on kettle bass with digital degree readout." class="h-full w-full tw-object-cover tw-object-center" width="1100" height="1100">
                    </div>
                    <div class="tw-aspect-h-1 tw-aspect-w-1 tw-overflow-hidden tw-rounded-lg tw-bg-gray-100">
                      <img src="https://tailwindui.com/plus/img/ecommerce-images/product-feature-09-detail-02.jpg" alt="Kettle spout pouring boiling water into coffee grounds in pour-over mug." class="h-full w-full tw-object-cover tw-object-center" width="1100" height="1100">
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
    </div>
</div>
  
  
  {% schema %}
        {
        "name": "Feature Product",
      "tag": "section",
      "settings": [
        {
          "type": "range",
          "id": "padding_top",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_top",
          "default": 36
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_bottom",
          "default": 36
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Test Product"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Final Stock. Up to 50% off."
        },
        {
          "type": "text",
          "id": "btn_text",
          "label": "Button Text",
          "default": "Shop the sale"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ],
      "blocks": [
        {
          "type": "feature",
          "name": "Feature",
          "settings": [
            {
              "type": "text",
              "id": "title",
              "label": "Title",
              "default": "Sleek design"
            },
            {
              "type": "text",
              "id": "description",
              "label": "Description",
              "default": "The machined kettle has a smooth black finish and contemporary shape that stands apart from most plastic appliances."
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "Feature Product"
        }
      ]
    }
  {% endschema %}
